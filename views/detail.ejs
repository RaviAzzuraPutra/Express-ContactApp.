<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>
                Detail Contact
            </h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data Contact Tidak Ada!! <br>
                    <a href="/contact" class="alert-link fw-normal">&laquo; kembali</a>. 
                  
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.Nama %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.NoTelepon %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact/edit/<%= contact.Nama %>" class="btn btn-secondary badge">Ubah</a>
                  <a href="/contact/delete/<%= contact.Nama %>" class="btn btn-danger badge" onclick="return confirm('Apakah Anda Yakin Ingin Menghapus Data Ini?')">Hapus</a>
                  <a href="/contact" class="card-link d-block mt-4">&laquo; Kembali</a>
                </div>
              </div>
              <% } %>
        </div>
    </div>
</div>