<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>
                Daftar Contact
            </h2>

            <a href="/contact/add" class="btn btn-primary mb-3">Tambah Data Contact</a>

            <% if (msg.length !== 0) { %>
              <div class="alert alert-success" role="alert">
                <%= msg %>
              </div>
              
            <% } %>

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No Handphone</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contacts.length === 0) { %>
                    <tr>
                      <td colspan="4">
                        <div class="alert alert-secondary fw-bold" role="alert">
                          Data Contact Masih Kosong !!!
                        </div>
                      </td>
                    </tr>
                  <% } %>
                  <% let no = 1 %>
                  <% contacts.forEach((contact, index) => { index++ %>
                    <tr>
                      <th scope="row"><%= index++ %></th>
                      <td><%= contact.Nama %></td>
                      <td><%= contact.NoTelepon %></td>
                      <td>
                          <a href="/contact/<%= contact.Nama %>" class="btn btn-success badge rouded-pill"><i class="bi bi-info-circle"></i> Detail</a>
                      </td>
                    </tr>
                  <% }) %>
                 
                </tbody>
              </table>
        </div>
    </div>
</div>