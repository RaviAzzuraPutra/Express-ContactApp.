<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Contact</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li>
                      <%= error.msg %>
                    </li>
                  <% }) %>
                </ul>
              </div>
              
            <% } %>

            <form method="post" action="/contact/update">
                <input type="hidden" name="oldNama" value="<%=  contact.oldNama || contact.Nama %>">
                <div class="mb-3">
                  <label for="Nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="Nama" name="Nama" required value="<%= contact.Nama %>">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required value="<%= contact.email %>">
                  </div>
                <div class="mb-3">
                    <label for="NoTelepon" class="form-label">No Telepon</label>
                    <input type="text" class="form-control" id="NoTelepon" name="NoTelepon" required value="<%= contact.NoTelepon%>">
                  </div>
                <button type="submit" class="btn btn-primary">Ubah</button>
              </form>
        </div>
    </div>
</div>